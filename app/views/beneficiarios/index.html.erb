<div class="container-fluid">
  <p id="notice"><%= notice %></p>
    <h1>Beneficiarios</h1>

    <table class='ui celled table'>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Sobrenome</th>
          <th>Genero</th>
          <th>cpf</th>
          <th>email</th>
          <th>Organizacao</th>
          <th colspan="3">Ações</th>
        </tr>
      </thead>

      <tbody>
        <% @beneficiarios.each do |beneficiario| %>
          <tr>
            <td><%= link_to beneficiario.nome, organizacao_beneficiario_path(beneficiario.organizacao, beneficiario)	 %></td>
            <td><%= beneficiario.sobre_nome %></td>
            <td><%= beneficiario.genero.capitalize %></td>
            <td><%= beneficiario.cpf %></td>
            <td><%= beneficiario.email %></td>
            <td><%= beneficiario.organizacao.nome_fantasia %></td>
            <td><%= link_to edit_button , edit_organizacao_beneficiario_path(beneficiario.organizacao,beneficiario) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to 'Adicionar Beneficiario', new_organizacao_beneficiario_path,  class: 'btn btn-light-blue' %>
</div>
